<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pig4cloud.pigx.auth.mapper.SaasUserMapper">

    <resultMap id="baseResultMap" type="com.pig4cloud.pigx.auth.domain.SaasUser">
        <id property="id" column="id" jdbcType="INTEGER" />
        <result property="userName" column="user_name" jdbcType="VARCHAR" />
        <result property="password" column="password" jdbcType="VARCHAR" />

    </resultMap>


    <select id="selectByUserName" parameterType="java.lang.String" resultMap="baseResultMap">
        select id,user_name,password from saas_user where user_name = #{userName,jdbcType=VARCHAR}
    </select>


</mapper>